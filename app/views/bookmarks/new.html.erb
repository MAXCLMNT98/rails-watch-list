<h1>Add a new movie to <%= @list.name %></h1>


<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.association :movie, prompt: "Choose your movie" %>
  <%= f.input :comment, placeholder: "enter a comment" %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>

<%= link_to "back", list_path(@list), class: "btn-btn-secondary" %>
